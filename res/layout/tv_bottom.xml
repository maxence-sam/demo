<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/bottom_dark"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/iv_bottom_screen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher"
        />
    <TextView 
		android:id="@+id/tv_bottom_screen"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Full screen"
        android:textColor="@android:color/white"
        />
    <ImageView 
        android:id="@+id/iv_bottom_ch_up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher"
        />
    <ImageView 
        android:id="@+id/iv_bottom_ch_down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher"
        />
     <TextView 
         android:id="@+id/tv_bottom_ch"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:text="CH Page up/down"
         />
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_bottom_setting"
       
        />
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_bottom_cc"
        android:contentDescription="sss"
       
        />
     <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_bottom_options"
        />
    
     
</LinearLayout>
