<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        >
        <ImageView 
            android:id="@+id/iv_channel_icon"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView 
                android:id="@+id/tv_channel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/channel_name"
                android:text="How It's made"
                android:layout_gravity="top"
                android:textSize="17sp"
                />
            <TextView 
                android:id="@+id/tv_channel_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_gravity="bottom"
                android:text="03:30-04:40"
                android:textSize="17sp"
                />
            
            
        </LinearLayout>
        
    </LinearLayout>
 <TextView 
     android:layout_marginLeft="20dp"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:textColor="@android:color/white"
     android:text="Scooters;professional cookware;luxury inlaid boxes ;high-efficiency 
     water heaters"
     />
</LinearLayout>
